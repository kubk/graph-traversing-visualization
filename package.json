    {
      "path": "./public/bundle.js",
      "maxSize": "100 kB"
    }
  ],
  "dependencies": {
    "handlebars": "^4.5.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.7",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^24.0.25",
    "babel-core": "^6.25.0",
    "babel-loader": "^8.0.6",
    "babel-preset-es2015": "^6.24.1",
    "bundlesize": "^0.18.0",
    "css-loader": "^3.4.0",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "source-map-explorer": "^2.2.0",
    "style-loader": "^1.1.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }

{
  "name": "graphs",
  "version": "1.0.0",
  "description": "Graph manipulation/traversing visualization using vanilla JavaScript + Canvas API.",
  "scripts": {
    "start": "webpack-dev-server --watch --hot --mode development",
    "build": "webpack --mode production",
    "bundlesize": "bundlesize",
    "source-map-explorer": "webpack --mode development && npx source-map-explorer ./public/bundle.js",
